<h1>create a new post in <%= @category.name %></h1>
<ul>
  <%= form_for [@category, @post] do |f| %>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :content %>
      <%= f.text_area :content  %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>